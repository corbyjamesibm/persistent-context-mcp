# Persistent Context MCP Configuration Example
# Copy this file to .env and update with your values

# Neo4j Database Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=changeme

# Server Configuration
PORT=3000
UI_PORT=5173
NODE_ENV=development
LOG_LEVEL=info

# Data Storage Paths
DATA_DIR=~/.persistent-context
BACKUP_DIR=~/.persistent-context/backups
SECRETS_PATH=~/.persistent-context/secrets

# Feature Flags
ENABLE_UI=true
ENABLE_MCP=true
ENABLE_AUTO_BACKUP=true
BACKUP_INTERVAL_HOURS=24

# Optional: AI Integration
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=sk-ant-...

# Optional: TargetProcess Integration
# TP_DOMAIN=your-domain.tpondemand.com
# TP_USERNAME=your-username
# TP_PASSWORD=your-password

# Security Settings
JWT_SECRET=change-this-to-random-string
SESSION_SECRET=change-this-to-random-string
CORS_ORIGIN=http://localhost:5173

# Database Pooling
DB_POOL_SIZE=10
DB_CONNECTION_TIMEOUT=30000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100