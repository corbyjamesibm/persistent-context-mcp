{
  "name": "persistent-context-store",
  "version": "1.0.0",
  "description": "Production-ready AI memory management and context persistence system",
  "main": "build/index.js",
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "start": "node build/index.js",
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsc-alias",
    "build:docker": "docker build -t persistent-context-store .",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:smoke": "npm run test -- --testNamePattern=\"smoke\"",
    "lint": "eslint src/ --ext .ts,.tsx",
    "lint:fix": "eslint src/ --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,md}\"",
    "clean": "rimraf build/ dist/ coverage/",
    "db:migrate": "tsx src/utils/migrate.ts",
    "db:seed": "tsx src/utils/seed.ts",
    "db:reset": "tsx src/utils/reset.ts",
    "backup": "./scripts/backup.sh",
    "deploy": "./scripts/deploy.sh",
    "deploy:docker": "./scripts/deploy.sh docker",
    "deploy:k8s": "./scripts/deploy.sh k8s",
    "deploy:local": "./scripts/deploy.sh local",
    "health:check": "curl -f http://localhost:3000/health || exit 1",
    "performance:test": "artillery run scripts/load-test.yml",
    "security:scan": "npm audit --audit-level high",
    "docker:build": "docker build -t persistent-context-store:latest .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "k8s:apply": "kubectl apply -f k8s/",
    "k8s:delete": "kubectl delete -f k8s/",
    "k8s:logs": "kubectl logs -f -l app=persistent-context-store -n context-store",
    "release:patch": "npm version patch && git push --tags",
    "release:minor": "npm version minor && git push --tags",
    "release:major": "npm version major && git push --tags",
    "docs:build": "typedoc --out docs/api src/",
    "docs:serve": "http-server docs/ -p 8080",
    "precommit": "lint-staged",
    "prepare": "husky install",
    "mcp": "tsx src/mcp-server.ts",
    "setup:podman": "./scripts/podman-setup.sh",
    "setup:local": "./scripts/dev-local.sh",
    "cleanup:podman": "./scripts/podman-cleanup.sh"
  },
  "keywords": [
    "ai",
    "memory",
    "context",
    "persistence",
    "llm",
    "claude",
    "neo4j",
    "graph-database",
    "mcp",
    "model-context-protocol"
  ],
  "author": "Digital Design Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/persistent-context-store.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/persistent-context-store/issues"
  },
  "homepage": "https://github.com/your-org/persistent-context-store#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.0",
    "@neo4j/cypher-builder": "^1.0.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "neo4j-driver": "^5.28.1",
    "pino": "^8.16.2",
    "pino-pretty": "^10.2.3",
    "redis": "^4.6.11",
    "uuid": "^9.0.1",
    "winston": "^3.17.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.19.9",
    "@types/supertest": "^2.0.16",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "artillery": "^2.0.3",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.1.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.6.0",
    "typedoc": "^0.25.4",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.ts",
      "**/tests/**/*.test.ts"
    ],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/tests/**",
      "!src/**/*.test.ts"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "setupFilesAfterEnv": [
      "<rootDir>/src/tests/setup/jest.setup.ts"
    ],
    "testTimeout": 30000,
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "eslint:recommended",
      "@typescript-eslint/recommended",
      "prettier"
    ],
    "plugins": [
      "@typescript-eslint",
      "import",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "error",
      "@typescript-eslint/no-unused-vars": "error",
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/explicit-module-boundary-types": "off",
      "import/order": [
        "error",
        {
          "groups": [
            "builtin",
            "external",
            "internal",
            "parent",
            "sibling",
            "index"
          ],
          "newlines-between": "always"
        }
      ]
    },
    "env": {
      "node": true,
      "es2022": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 2022,
      "sourceType": "module"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 100,
    "tabWidth": 2,
    "useTabs": false
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test && npm run build"
    }
  }
}
