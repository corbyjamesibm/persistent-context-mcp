{
  "name": "persistent-context-store",
  "version": "0.1.0",
  "description": "A persistent context management system for AI conversations using Neo4j graph database and IBM Carbon Design System",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:api": "tsx watch src/index.ts",
    "build": "tsc && vite build",
    "build:api": "tsc",
    "build:ui": "vite build",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.{ts,tsx}",
    "lint:fix": "eslint src/**/*.{ts,tsx} --fix",
    "typecheck": "tsc --noEmit",
    "preview": "vite preview",
    "setup:podman": "./scripts/podman-setup.sh",
    "setup:local": "./scripts/dev-local.sh",
    "cleanup:podman": "./scripts/podman-cleanup.sh"
  },
  "keywords": [
    "context-management",
    "ai",
    "neo4j",
    "graph-database",
    "mcp",
    "carbon-design-system",
    "typescript"
  ],
  "author": "Digital Design Team",
  "license": "MIT",
  "dependencies": {
    "neo4j-driver": "^5.15.0",
    "@carbon/react": "^1.54.0",
    "@carbon/icons-react": "^11.39.0",
    "@carbon/charts": "^1.16.0",
    "@carbon/charts-react": "^1.16.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "d3": "^7.8.5",
    "elasticsearch": "^16.7.3",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.17",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/compression": "^1.7.5",
    "@types/d3": "^7.4.3",
    "@types/jest": "^29.5.8",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "@vitejs/plugin-react": "^4.2.0",
    "eslint": "^8.54.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "tsx": "^4.6.0",
    "typescript": "^5.3.2",
    "vite": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/digital-design-team/persistent-context-store.git"
  },
  "bugs": {
    "url": "https://github.com/digital-design-team/persistent-context-store/issues"
  },
  "homepage": "https://github.com/digital-design-team/persistent-context-store#readme"
}