{
  "name": "@corbyjames/persistent-context-mcp",
  "version": "1.0.0",
  "description": "AI memory management and context persistence system with MCP server for Claude Desktop",
  "main": "dist/index.js",
  "bin": {
    "persistent-context": "./dist/cli.js",
    "pcmcp": "./dist/cli.js"
  },
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/corbyjames/persistent-context-mcp.git"
  },
  "keywords": [
    "mcp",
    "claude",
    "claude-desktop",
    "ai",
    "context",
    "memory",
    "persistence",
    "neo4j",
    "knowledge-graph",
    "targetprocess",
    "model-context-protocol"
  ],
  "author": "Corby James",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/corbyjames/persistent-context-mcp/issues"
  },
  "homepage": "https://github.com/corbyjames/persistent-context-mcp#readme",
  "scripts": {
    "start": "node dist/index.js",
    "start:mcp": "node dist/mcp-server.js",
    "start:ui": "vite",
    "dev": "tsx watch src/index.ts",
    "build": "npm run clean && npm run build:ts && npm run build:ui && npm run copy:assets",
    "build:ts": "tsc && tsc-alias",
    "build:ui": "vite build",
    "copy:assets": "cp -r docker k8s scripts dist/",
    "clean": "rimraf dist/ build/ coverage/",
    "test": "jest",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "jest --testPathPattern=e2e",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/ --ext .ts,.tsx",
    "lint:fix": "eslint src/ --ext .ts,.tsx --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json,md}\"",
    "prepublishOnly": "npm run build && npm run test",
    "postinstall": "node dist/scripts/postinstall.js || true",
    "docker:build": "docker build -t persistent-context-mcp:latest .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "podman:build": "podman build -t persistent-context-mcp:latest .",
    "podman:run": "podman-compose up -d",
    "podman:stop": "podman-compose down",
    "neo4j:start": "docker run -d --name neo4j-pcmcp -p 7474:7474 -p 7687:7687 -e NEO4J_AUTH=neo4j/password neo4j:5-community",
    "neo4j:stop": "docker stop neo4j-pcmcp && docker rm neo4j-pcmcp",
    "configure": "node dist/scripts/configure.js",
    "claude:setup": "node dist/scripts/claude-setup.js",
    "release:patch": "npm version patch && npm publish",
    "release:minor": "npm version minor && npm publish",
    "release:major": "npm version major && npm publish"
  },
  "dependencies": {
    "@anthropic/mcp": "^1.11.1",
    "@types/node": "^20.10.0",
    "axios": "^1.6.2",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "joi": "^17.11.0",
    "neo4j-driver": "^5.17.0",
    "node-cron": "^3.0.3",
    "openai": "^4.24.1",
    "p-queue": "^7.4.1",
    "prompts": "^2.4.2",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node-cron": "^3.0.11",
    "@types/prompts": "^2.4.9",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.55.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.1",
    "rimraf": "^5.0.5",
    "sass": "^1.69.5",
    "ts-jest": "^29.1.1",
    "tsc-alias": "^1.8.8",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  },
  "optionalDependencies": {
    "@types/d3": "^7.4.3",
    "d3": "^7.8.5",
    "recharts": "^2.10.3"
  },
  "files": [
    "dist/",
    "docker/",
    "k8s/",
    "scripts/",
    "README.md",
    "LICENSE",
    ".env.example"
  ]
}